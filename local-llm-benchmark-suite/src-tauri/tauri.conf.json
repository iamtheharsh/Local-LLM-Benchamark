{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "identifier": "com.llm.benchmark.suite"
    },
    "windows": [
      {
        "title": "Local LLM Benchmark Suite",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
